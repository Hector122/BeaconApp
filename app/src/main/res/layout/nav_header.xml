    <!-- Imagen de perfil -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_circle_image"
        android:layout_width="@dimen/icon_profile_image_size"
        android:layout_height="@dimen/icon_profile_image_size"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:border_color="@android:color/white"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_circle_image"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:paddingBottom="8dp"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_text_view"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:gravity="left"
        android:text="@string/email_example"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>