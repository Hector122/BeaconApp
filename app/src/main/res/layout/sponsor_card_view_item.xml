<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/image_sponsor"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/category_cellphone_625x300" />

        <TextView
            android:id="@+id/title_sponsor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_sponsor"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/text_example_title_short"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/time_receive_sponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/title_sponsor"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_example_title_short"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/category_sponsor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/title_sponsor"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/time_receive_sponsor"
            android:gravity="right"
            android:text="@string/text_example_title_short"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

